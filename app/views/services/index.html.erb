<h1>Listing services</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= link_to service.name, service  %></td>
    <td><%= raw truncate(strip_tags(service.content), :length => 200) %></td>
    <td><% unless service.service_image.nil? %>
          <%= link_to image_tag(service.service_image.url(:thumb)), service %>
      <% end %></td>
  </tr>
  <tr>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

